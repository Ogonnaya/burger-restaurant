<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12" id="top-bar">
                <div class="logo"><b>All <span>we do</span> is <span>burgers</span> !!</b></div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6" class="task">
            <div>
                <div class="subhead">
                    <h3>Ready to eat</h3>
                </div>
                <div class="burger-orders">
                    {{!-- Handlebars logic if not devoured --}}
                    {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="col-md-12 burger">
                        <pre>{{this.burger_name}}</pre>
                    </div>
                    <div class="col-md-6 devour-burger">
                        <form class="devour-form button-size">
                            <input input type="hidden" class="burger_id" type="text" value={{this.id}}>
                            <button type="submit" class="btn btn-outline-light">Devour it!</button>
                        </form>
                    </div>
                    <div class="custom-burger"></div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
            <div class="eat-border"></div>
            <div class="custom-burger">
                <div class="col-md-12 enter_section">
                    <h3>Order a custom burger</h3>
                    <p>Enter a burger you want to eat and order it.</p>

                    <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                    <button type="submit" class="btn btn-outline-warning" id="text-enter-button">Order it!</button>

                </div>

            </div>
        </div>


        <div class="col-md-3"></div>
        <div class="col-md-3" class="task">
            <h3>Devoured!</h3>
            {{!-- Handlebars logic for each burger if devoured --}}
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>